<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8FA5D3"
    tools:context="com.rasyidf.adoptier.Activity.PetContentActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="371dp"
        android:layout_height="706dp"
        app:cardCornerRadius="@dimen/fluentui_corner_radius_4"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/coordinatorLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="385dp"
                android:layout_height="275dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="200dp"
                android:layout_marginEnd="2dp"
                android:gravity="bottom"
                android:orientation="vertical"
                android:padding="8dp"
                app:layout_anchorGravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:background="@color/fluentui_white"
                    android:text="TextView"
                   />

                <TextView
                    android:id="@+id/petInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:background="@color/fluentui_white"
                    android:maxLength="30"
                    android:text="TextView"
                     />

                <TextView
                    android:id="@+id/petAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:background="@color/fluentui_white"
                    android:text="TextView"
                  />

                <TextView
                    android:id="@+id/petName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:background="@color/fluentui_white"
                    android:text="TextView"
                     />

                <TextView
                    android:id="@+id/petCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:background="@color/fluentui_white"
                    android:text="TextView"
                     />

                <TextView
                    android:id="@+id/petType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:background="@color/fluentui_white"
                    android:text="TextView"
                   />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="351dp"
                android:layout_height="51dp"
                android:layout_marginStart="46dp"
                android:layout_marginEnd="46dp"
                android:layout_marginBottom="12dp"
                app:layout_anchorGravity="bottom|center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

                <ImageView
                    android:id="@+id/imgWA"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="28dp"
                    android:background="@mipmap/ic_whatsapp"
                    android:onClick="whatsappButton" />

                <ImageView
                    android:id="@+id/imgPhone"
                    android:layout_width="47dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="28dp"
                    android:layout_marginBottom="28dp"
                    android:background="@drawable/ic_fluent_call_16_regular"
                    android:onClick="btnPhone" />

            </LinearLayout>

            <ImageView
                android:id="@+id/petImage"
                android:layout_width="383dp"
                android:layout_height="184dp"
                android:layout_marginTop="16dp"
                app:layout_anchorGravity="top|center"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
